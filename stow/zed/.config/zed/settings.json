{
  // =======================
  //      EDITOR SETTINGS
  // =======================
  "agent_buffer_font_size": 15.0,
  "buffer_line_height": "standard",
  "relative_line_numbers": "wrapped",
  "hard_tabs": false,
  "centered_layout": {
    "right_padding": 0,
  },
  "show_call_status_icon": true,
  "show_signature_help_after_edits": true,
  "auto_indent_on_paste": true,
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "autoscroll_on_clicks": true,
  "fast_scroll_sensitivity": 5,
  "scroll_sensitivity": 2,
  "redact_private_values": false,
  "private_files": [
    // List of private files to exclude from search, version control, etc.
    ".env",
    ".env.local",
    ".env.*.local",
    "secrets.json",
    "private.key",
  ],
  "soft_wrap": "editor_width",
  // =========================
  //     TOOLBAR SETTINGS
  // =========================
  "toolbar": {
    "agent_review": false,
    "breadcrumbs": true,
    "code_actions": false,
    "quick_actions": false,
    "selections_menu": false,
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all",
  },
  "show_wrap_guides": true,
  "scrollbar": {
    "show": "never",
  },
  "slash_commands": {
    "cargo_workspace": {
      "enabled": true,
    },
  },
  "title_bar": {
    "show_branch_icon": true,
  },
  // =======================
  //      FONT SETTINGS
  // =======================
  "buffer_font_size": 15.0,
  "buffer_font_weight": 600,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "ui_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "ui_font_weight": 600,
  "ui_font_size": 15.0,
  "agent_ui_font_size": 15.0,
  // =======================
  //      UI SETTINGS
  // =======================
  "unstable.ui_density": "comfortable",
  "icon_theme": "VSCode Great Icons Theme",
  "theme": {
    "mode": "system",
    "light": "Dracula Light (Alucard)",
    "dark": "Dracula Solid",
  },
  "bottom_dock_layout": "left_aligned",
  "when_closing_with_no_tabs": "close_window",
  "preview_tabs": {
    "enable_preview_multibuffer_from_code_navigation": true,
    "enable_keep_preview_on_code_navigation": true,
    "enable_preview_from_file_finder": true,
    "enabled": true,
  },
  "tab_bar": {
    "show_pinned_tabs_in_separate_row": false,
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false,
  },
  "use_smartcase_search": true,
  "minimap": {
    "current_line_highlight": "all",
    "show": "always",
    "thumb": "always",
    "thumb_border": "none",
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "enabled": true,
    "active_line_width": 4,
    "line_width": 2,
  },
  // =======================
  //      FILE SETTINGS
  // =======================
  "auto_install_extensions": {
    "nix": true,
    "golang": true,
    "python": true,
    "LOG": true,
    "GraphQL": true,
    "NGINX": true,
    "SCSS": true,
    "XML": true,
  },
  // =======================
  //        AI SETTINGS
  // =======================
  "edit_predictions": {
    "disabled_globs": [
      "**/node_modules/**",
      "**/vendor/**",
      "**/.git/**",
      "**/.hg/**",
      "**/.svn/**",
      "**/dist/**",
      "**/build/**",
    ],
    "mode": "eager",
  },
  "agent": {
    "show_turn_stats": true,
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "gemini-2.5-flash",
    },
    "default_profile": "write",
    "always_allow_tool_actions": true,
  },
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "show_edit_predictions": true,
  // =======================
  //      PANEL SETTINGS
  // =======================
  "outline_panel": {
    "auto_reveal_entries": true,
    "dock": "right",
    "auto_fold_dirs": true,
  },
  "project_panel": {
    "hide_gitignore": false,
    "indent_size": 30,
    "show_diagnostics": "all",
  },
  "git_panel": {
    "sort_by_path": true,
    "status_style": "icon",
  },
  "collaboration_panel": {
    "button": true,
    "dock": "right",
  },
  // =======================
  //      DIAGNOSTICS
  // =======================
  "diagnostics": {
    "inline": {
      "update_debounce_ms": 50,
      "enabled": true,
      "padding": 4,
      "min_column": 0,
      "max_severity": "hint",
    },
    "include_warnings": true,
    "button": true,
  },
  "line_indicator_format": "short",
  // =======================
  //      GIT SETTINGS
  // =======================
  "git": {
    "disable_git": false,
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500,
      "show_commit_summary": true,
    },
    "hunk_style": "unstaged_hollow",
  },
  "message_editor": {
    "auto_replace_emoji_shortcode": true,
  },
  // =======================
  //      TERMINAL SETTINGS
  // =======================
  "terminal": {
    "copy_on_select": true,
    "font_family": "JetBrainsMonoNL Nerd Font Mono",
    "font_size": 18.0,
    "font_weight": 500,
  },
  // =======================
  //      SEARCH SETTINGS
  // =======================
  "search": {
    "include_ignored": true,
  },
  // =======================
  //      DEBUGGER SETTINGS
  // =======================
  "debugger": {
    "dock": "left",
    "format_dap_log_messages": true,
    "log_dap_communications": true,
    "save_breakpoints": true,
  },
  // =======================
  //      MISC SETTINGS
  // =======================
  //
  // =======================
  //      LANGUAGE SETTINGS
  // =======================
  "load_direnv": "direct",
  "format_on_save": "on",
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
    "Vue.js": {
      "formatter": {
        "language_server": {
          "name": "eslint"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
  },
  "lsp": {
    "eslint": {
      "settings": {
        "workingDirectory": {
          "mode": "location"
        }
      }
    },
    "vtsls": {
      "settings": {
        "typescript": {
          "format": {
            "enable": false
          }
        },
        "javascript": {
          "format": {
            "enable": false
          }
        }
      }
    },
    "vue-language-server": {
      "settings": {
        "vue": {
          "format": {
            "enable": false
          }
        }
      }
    }
  },
  "prettier": {
    "allowed": false,
  },
}
