{
  // --------------------------------------------------------------------------
  // Workbench UI & Appearance
  // --------------------------------------------------------------------------
  "workbench.enableExperiments": true,
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.preferredLightColorTheme": "Default Light Modern",
  "workbench.preferredDarkColorTheme": "Default Dark+",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.location": "default",
  "workbench.startupEditor.showTabs": false,
  "workbench.tips.enabled": false,
  "workbench.panel.defaultLocation": "top",
  "workbench.sideBar.location": "left",
  "workbench.experimental.share.enabled": true,
  "window.autoDetectColorScheme": true,
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "auto",
  "window.openFilesInNewWindow": "on",
  "window.zoomLevel": 0,
  "window.commandCenter": true,
  "window.menuBarVisibility": "hidden",
  "breadcrumbs.enabled": true,

  // --------------------------------------------------------------------------
  // Editor Appearance & Behavior
  // --------------------------------------------------------------------------
  "editor.fontFamily": "'Fira Code Medium', 'Fira Code', hack, 'Droid Sans Mono', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 20,
  "editor.fontWeight": "200",
  "editor.lineHeight": 30,
  "editor.tabSize": 2,
  "editor.insertSpaces": false,
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "gutter",
  "editor.roundedSelection": false,
  "editor.scrollBeyondLastLine": false,
  "editor.quickSuggestionsDelay": 4,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.minimap.enabled": false,
  "editor.matchBrackets": "always",
  "editor.maxTokenizationLineLength": 30000,
  "editor.rulers": [80],
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "same",
  "editor.guides.indentation": true,

  // --------------------------------------------------------------------------
  // Language Specific Editor Settings
  // --------------------------------------------------------------------------
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go"
  },
  "gopls": {
    "build.directoryFilters": ["-**/mocks"]
  },

  // --------------------------------------------------------------------------
  // File Management
  // --------------------------------------------------------------------------
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/.idea": true,
    "**/*.iml": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "venv": true,
    "**/node_modules/*/**": true,
    "node_modules": true,
    "**/bower_components/**": true,
    "**/.idea/**": true,
    "**/.vscode": true,
    "env*": true,
    "*.sublime-*": true,
    "**/mocks": true,
    "**/mock": true
  },
  "search.exclude": {
    "**/.idea/**": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/.git": true,
    "**/mocks": true,
    "**/mock": true
  },
  "files.associations": {
    "*.html": "html",
    "*.njk": "html",
    "*.mustache": "html",
    "*vue": "vue",
    "*rs": "rust",
    "*ctl": "shellscript",
    "*conf": "shellscript",
    "*conf.js": "webpack",
    "*.prettierrc": "json",
    "*.babelrc": "json",
    "*.postcssrc": "json",
    "*.eslintrc": "json",
    "*.postcss": "postcss",
    "*.js": "javascriptreact",
    "jsonc": "json"
  },

  // --------------------------------------------------------------------------
  // HTML, CSS, Markdown, Emmet, and Related Extensions
  // --------------------------------------------------------------------------
  "html-css-class-completion.enableEmmetSupport": true,
  "html.format.endWithNewline": true,
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.importStatement": "warning",
  "markdown.preview.fontSize": 17,
  "emmet.triggerExpansionOnTab": true,
  "emmet.excludeLanguages": ["markdown"],
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": [
      "javascript",
      "javascriptreact",
      "babeljavascript",
      "typescript",
      "typescriptreact",
      "babel"
    ]
  },

  // --------------------------------------------------------------------------
  // IntelliSense & Path Mappings
  // --------------------------------------------------------------------------
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "path-intellisense.mappings": {
    "path-intellisense.mappings": {
      "/": "${workspaceRoot}"
    }
  },

  // --------------------------------------------------------------------------
  // TypeScript & JavaScript
  // --------------------------------------------------------------------------
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // --------------------------------------------------------------------------
  // Formatting Tools
  // --------------------------------------------------------------------------
  "vetur.format.styleInitialIndent": true,
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.arrowParens": "always",
  "prettier.singleQuote": true,
  "prettier.printWidth": 85,
  "prettier.semi": true,

  // --------------------------------------------------------------------------
  // Shell & Terminal
  // --------------------------------------------------------------------------
  "shellcheck.disableVersionCheck": true,
  "shellcheck.executablePath": "/usr/bin/shellcheck",
  "terminal.integrated.shell.linux": "/usr/bin/bash",
  "terminal.integrated.shell.osx": "/usr/bin/bash",
  "terminal.integrated.shellArgs.osx": [],
  "terminal.integrated.scrollback": 800,
  "terminal.integrated.cwd": "",

  // --------------------------------------------------------------------------
  // File Explorer
  // --------------------------------------------------------------------------
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // --------------------------------------------------------------------------
  // Vim Extension
  // --------------------------------------------------------------------------
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.enableNeovim": true,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.list"]
    }
  ],

  // --------------------------------------------------------------------------
  // Git
  // --------------------------------------------------------------------------
  "git.path": "/usr/bin/git",
  "git.confirmSync": false,

  // --------------------------------------------------------------------------
  // Spell Checking
  // --------------------------------------------------------------------------
  "cSpell.language": "en",
  "cSpell.userWords": [
    "Helvetica",
    "QLHTTP",
    "URL's",
    "antialiased",
    "graphQLHTTP",
    "graphiql",
    "intellisense",
    "moebius",
    "monospace",
    "polyfill",
    "scrollback"
  ],
  "cSpell.enabledLanguageIds": [
    "c",
    "cpp",
    "css",
    "go",
    "golang",
    "handlebars",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "latex",
    "markdown",
    "org",
    "php",
    "plaintext",
    "python",
    "react",
    "restructuredtext",
    "rust",
    "text",
    "typescript",
    "typescriptreact",
    "vue",
    "yml"
  ],

  // --------------------------------------------------------------------------
  // Build Tools & Miscellaneous
  // --------------------------------------------------------------------------
  "makefile.configureOnOpen": true,

  // --------------------------------------------------------------------------
  // Cursor Extension
  // --------------------------------------------------------------------------
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.composer.shouldAllowCustomModes": true,
  "cursor.composer.shouldAutoAcceptDiffs": false,
  "cursor.cmdk.useThemedDiffBackground2": false,
  "cursor.chat.terminalShowHoverHint": false,
  "cursor.windowSwitcher.sidebarHoverCollapsed": true,
  "diffEditor.renderSideBySide": false,
  "workbench.editor.showTabs": "none",
  "editor.stickyScroll.enabled": false,
  "git.autofetch": true,
  "go.toolsManagement.autoUpdate": true,
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "python.languageServer": "None",
  "notebook.output.textLineLimit": 100
}
