{
  // === TELEMETRY ===
  "workbench.enableExperiments": false,
  // === WORKBENCH UI ===
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.preferredLightColorTheme": "Default Light Modern",
  "workbench.preferredDarkColorTheme": "Default Dark+",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.location": "hidden",
  "workbench.startupEditor": "none",
  "workbench.startupEditor.showTabs": false,
  "workbench.tips.enabled": false,
  "workbench.panel.defaultLocation": "bottom",
  "workbench.sideBar.location": "left",
  "workbench.experimental.share.enabled": true,
  "window.autoDetectColorScheme": true,
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "auto",
  "window.openFilesInNewWindow": "off",
  "window.zoomLevel": 0,
  "window.commandCenter": true,
  "window.menuBarVisibility": "compact",
  "breadcrumbs.enabled": true,
  // === EDITOR ===
  "editor.fontFamily": "'Fira Code Medium', 'Fira Code', hack, 'Droid Sans Mono', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 20,
  "editor.fontWeight": "200",
  "editor.lineHeight": 30,
  "editor.tabSize": 2,
  "editor.insertSpaces": false,
  "editor.tabCompletion": "on",
  "editor.suggestSelection": "first",
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "gutter",
  "editor.roundedSelection": false,
  "editor.scrollBeyondLastLine": false,
  "editor.quickSuggestionsDelay": 4,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.minimap.enabled": false,
  "editor.matchBrackets": "always",
  "editor.maxTokenizationLineLength": 30000,
  "editor.formatOnSave": true,
  "editor.rulers": [80],
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "same",
  "editor.guides.indentation": true,
  // === FORMATTERS ===
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrap": "bounded",
    "editor.wordWrapColumn": 80,
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  "[python]": {},
  // === FILES & SEARCH ===
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/.idea": true,
    "**/*.iml": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "venv": true,
    "**/node_modules/*/**": true,
    "node_modules": true,
    "**/bower_components/**": true,
    "**/.idea/**": true,
    "**/.vscode": true,
    "env*": true,
    "*.sublime-*": true
  },
  "search.exclude": {
    "**/.idea/**": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true,
    "**/.git": true
  },
  "files.associations": {
    "*.html": "html",
    "*.njk": "html",
    "*.mustache": "html",
    "*vue": "vue",
    "*rs": "rust",
    "*ctl": "shellscript",
    "*conf": "shellscript",
    "*conf.js": "webpack",
    "*.prettierrc": "json",
    "*.babelrc": "json",
    "*.postcssrc": "json",
    "*.eslintrc": "json",
    "*.postcss": "postcss",
    "*.js": "javascriptreact"
  },
  // === HTML / CSS / MARKDOWN / EMMET ===
  "html-css-class-completion.enableEmmetSupport": true,
  "html.format.endWithNewline": true,
  "css.lint.compatibleVendorPrefixes": "warning",
  "css.lint.importStatement": "warning",
  "markdown.preview.fontSize": 17,
  "emmet.triggerExpansionOnTab": true,
  "emmet.excludeLanguages": ["markdown"],
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": [
      "javascript",
      "javascriptreact",
      "babeljavascript",
      "typescript",
      "typescriptreact",
      "babel"
    ]
  },
  // === INTELLICODE / PATH INTELLISENSE ===
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "path-intellisense.mappings": {
    "path-intellisense.mappings": {
      "/": "${workspaceRoot}"
    }
  },
  // === LANGUAGES ===
  // Python
  // "python.jediEnabled": false,
  // PHP
  // "php.validate.executablePath": "<php-path>",
  // Elixir/Erlang
  // "elixir.useElixirSense": false,
  // JS / TS
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Vue
  "vetur.format.styleInitialIndent": true,
  // === PRETTIER ===
  "prettier.htmlWhitespaceSensitivity": "css",
  "prettier.arrowParens": "always",
  "prettier.singleQuote": true,
  "prettier.printWidth": 85,
  "prettier.semi": true,
  // === LIVE SERVER ===
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.port": 6550,
  "liveServer.settings.root": "/",
  "liveServer.settings.CustomBrowser": "firefox:PrivateMode",
  "liveServer.settings.NoBrowser": false,
  "liveServer.settings.ignoreFiles": [
    "node_modules/**",
    "bower_components/**",
    ".idea/**",
    ".git/**",
    ".vscode/**",
    "**/*.iml",
    "**/*.scss",
    "**/*.sass"
  ],
  // === SHELL / TERMINAL ===
  "shellcheck.disableVersionCheck": true,
  "shellcheck.executablePath": "/usr/bin/shellcheck",
  "terminal.integrated.shell.linux": "/usr/bin/bash",
  "terminal.integrated.shell.osx": "/usr/bin/bash",
  "terminal.integrated.shellArgs.osx": [],
  "terminal.integrated.scrollback": 800,
  "terminal.integrated.cwd": "",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // === VIM ===
  "vim.neovimPath": "/usr/bin/nvim",
  "vim.enableNeovim": true,
  "vim.leader": "<space>",
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "m"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["bookmarks.list"]
    }
  ],
  // === GIT ===
  "git.path": "/usr/bin/git",
  "git.confirmSync": false,
  // === CSPELL ===
  "cSpell.language": "en",
  "cSpell.userWords": [
    "Helvetica",
    "QLHTTP",
    "URL's",
    "antialiased",
    "graphQLHTTP",
    "graphiql",
    "intellisense",
    "moebius",
    "monospace",
    "polyfill",
    "scrollback"
  ],
  "cSpell.enabledLanguageIds": [
    "c",
    "cpp",
    "css",
    "go",
    "golang",
    "handlebars",
    "html",
    "javascript",
    "javascriptreact",
    "json",
    "latex",
    "markdown",
    "org",
    "php",
    "plaintext",
    "python",
    "react",
    "restructuredtext",
    "rust",
    "text",
    "typescript",
    "typescriptreact",
    "vue",
    "yml"
  ],
  "makefile.configureOnOpen": true,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.composer.shouldAllowCustomModes": true,
  "cursor.composer.shouldAutoAcceptDiffs": false,
  "cursor.cmdk.useThemedDiffBackground2": false,
  "cursor.chat.terminalShowHoverHint": false,
  "cursor.windowSwitcher.sidebarHoverCollapsed": true
}
