{
  // ╔══════════════════════════════════════════════════════════════╗
  // ║  Zed Editor — settings.json                                ║
  // ║  Optimized for VS Code / Cursor users transitioning to Zed ║
  // ╚══════════════════════════════════════════════════════════════╝
  // ─── KEYMAP ────────────────────────────────────────────────────
  // Use VS Code keybindings as the base (Ctrl+P, Ctrl+Shift+P, etc.)
  "agent_servers": {
    "kimi": {
      "type": "registry"
    }
  },
  "file_finder": {
    "include_ignored": "smart"
  },
  "audio": {
    "experimental.auto_microphone_volume": true,
    "experimental.rodio_audio": true
  },
  "calls": {
    "mute_on_join": true
  },
  "use_system_prompts": false,
  "double_click_in_multibuffer": "open",
  "lsp_document_colors": "background",
  "vim_mode": false,
  "active_pane_modifiers": {
    "inactive_opacity": 0.5,
  },
  "base_keymap": "VSCode",
  // ─── FONTS ─────────────────────────────────────────────────────
  // Editor (buffer) font
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "buffer_font_size": 19.0,
  "buffer_font_weight": 600,
  "buffer_line_height": "standard",
  "buffer_font_features": {
    "calt": true,
    "liga": true,
  },
  // UI font
  "ui_font_family": "JetBrainsMonoNL Nerd Font Propo",
  "ui_font_size": 15.0,
  "ui_font_weight": 600,
  // Agent panel font
  "agent_buffer_font_size": 15.0,
  "agent_ui_font_size": 15.0,
  // ─── THEME & APPEARANCE ────────────────────────────────────────
  "theme": {
    "mode": "system",
    "light": "Dracula Light (Alucard)",
    "dark": "GitHub Dark",
  },
  "icon_theme": "VSCode Great Icons Theme",
  "unstable.ui_density": "compact",
  // Fade unused/unreachable code (like VS Code's "editor.showUnused")
  "unnecessary_code_fade": 0.5,
  // ─── EDITOR CORE ───────────────────────────────────────────────
  // Cursor
  "cursor_blink": true,
  "cursor_shape": "bar",
  "hide_mouse": "on_typing",
  // Line numbers (like VS Code's "editor.lineNumbers")
  "relative_line_numbers": "disabled",
  "current_line_highlight": "all",
  "selection_highlight": true,
  // Indentation
  "hard_tabs": false,
  "auto_indent_on_paste": true,
  // Wrapping (like VS Code's "editor.wordWrap")
  "soft_wrap": "editor_width",
  "show_wrap_guides": true,
  // Bracket colorization (like VS Code's "editor.bracketPairColorization.enabled")
  "colorize_brackets": true,
  // Autocomplete & signature help
  "show_completions_on_input": true,
  "show_completion_documentation": true,
  "auto_signature_help": true,
  "show_signature_help_after_edits": true,
  // Auto-close brackets/quotes (like VS Code's "editor.autoClosingBrackets")
  "use_autoclose": true,
  "use_auto_surround": true,
  // On-type formatting by LSP
  "use_on_type_format": true,
  // Whitespace rendering (like VS Code's "editor.renderWhitespace")
  "show_whitespaces": "selection",
  // Scrolling
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "vertical_scroll_margin": 5,
  "autoscroll_on_clicks": true,
  "scroll_sensitivity": 2,
  "fast_scroll_sensitivity": 5,
  // Sticky scroll (like VS Code's "editor.stickyScroll.enabled")
  "sticky_scroll": {
    "enabled": true,
  },
  // Inline code actions (like VS Code's lightbulb icon)
  "inline_code_actions": true,
  // Show edit predictions (AI completions)
  "show_edit_predictions": true,
  // Linked editing for HTML/Vue tags (like VS Code's "editor.linkedEditing")
  "linked_edits": true,
  // ─── INLAY HINTS ───────────────────────────────────────────────
  // Like VS Code's "editor.inlayHints.enabled"
  "inlay_hints": {
    "edit_debounce_ms": 100,
    "show_value_hints": true,
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": false,
    "show_other_hints": false,
    "show_background": true,
  },
  // ─── GUTTER ────────────────────────────────────────────────────
  "gutter": {
    "line_numbers": true,
    "runnables": true,
    "breakpoints": true,
    "folds": true,
  },
  // ─── INDENT GUIDES ─────────────────────────────────────────────
  // Like VS Code's "editor.guides.indentation" + "bracketPairs"
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware",
    "background_coloring": "indent_aware",
    "line_width": 2,
    "active_line_width": 4,
  },
  // ─── SCROLLBAR ─────────────────────────────────────────────────
  "scrollbar": {
    "show": "never",
    "cursors": true,
    "git_diff": true,
    "search_results": false,
    "selected_text": true,
    "diagnostics": "all",
  },
  // ─── MINIMAP ───────────────────────────────────────────────────
  // Like VS Code's "editor.minimap.*"
  "minimap": {
    "show": "always",
    "current_line_highlight": "all",
    "thumb": "always",
    "thumb_border": "none",
  },
  // ─── TABS & TAB BAR ───────────────────────────────────────────
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all",
  },
  "tab_bar": {
    "show": true,
    "show_pinned_tabs_in_separate_row": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false,
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_multibuffer_from_code_navigation": true,
    "enable_keep_preview_on_code_navigation": true,
  },
  // ─── TOOLBAR ───────────────────────────────────────────────────
  "toolbar": {
    "breadcrumbs": true,
    "agent_review": true,
    "code_actions": true,
    "quick_actions": true,
    "selections_menu": false,
  },
  // ─── TITLE BAR ─────────────────────────────────────────────────
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_project_items": true,
  },
  // ─── PANELS ────────────────────────────────────────────────────
  // File explorer (like VS Code's Explorer sidebar)
  "project_panel": {
    "entry_spacing": "standard",
    "sort_mode": "directories_first",
    "hide_root": false,
    "dock": "left",
    "hide_gitignore": false,
    "indent_size": 30,
    "show_diagnostics": "all",
    "indent_guides": {
      "show": "never"
    }
  },
  // Outline/symbols (like VS Code's Outline view)
  "outline_panel": {
    "default_width": 600.0,
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20.0,
    "auto_reveal_entries": false,
    "auto_fold_dirs": true,
    "dock": "right",
  },
  // Source control panel
  "git_panel": {
    "tree_view": false,
    "sort_by_path": true,
    "status_style": "icon",
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right",
  },
  // ─── DIAGNOSTICS ───────────────────────────────────────────────
  // Like VS Code's "editor.inlineSuggest" + Problems panel
  "diagnostics": {
    "inline": {
      "enabled": true,
      "update_debounce_ms": 250,
      "padding": 4,
      "min_column": 0,
      "max_severity": "hint",
    },
    "include_warnings": true,
    "button": true,
  },
  "line_indicator_format": "short",
  // ─── GIT ───────────────────────────────────────────────────────
  // Like VS Code's GitLens / built-in git
  "git": {
    "git_gutter": "tracked_files",
    "enable_diff": true,
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500,
      "show_commit_summary": true,
    },
    "hunk_style": "unstaged_hollow",
  },
  // ─── SEARCH ────────────────────────────────────────────────────
  "search": {
    "include_ignored": true,
  },
  "use_smartcase_search": true,
  "file_scan_exclusions": [
    "**/.git",
    "**/node_modules",
    "**/target",
    "**/.next",
    "**/.turbo",
    "**/dist",
    "**/build",
    "**/coverage",
    "*.svg",
    "**/static",
    "**/public"
  ],
  // ─── TERMINAL ──────────────────────────────────────────────────
  // Like VS Code's integrated terminal
  "terminal": {
    "copy_on_select": true,
    "font_family": "JetBrainsMonoNL Nerd Font Mono",
    "font_size": 18.0,
    "font_weight": 500,
  },
  // ─── DEBUGGER ──────────────────────────────────────────────────
  "debugger": {
    "dock": "left",
    "format_dap_log_messages": true,
    "log_dap_communications": true,
    "save_breakpoints": true,
  },
  // ─── AI & EDIT PREDICTIONS ─────────────────────────────────────
  // Copilot + Agent (like VS Code's Copilot / Cursor AI)
  "edit_predictions": {
    "provider": "zed",
    "mode": "eager",
    "disabled_globs": [
      "**/node_modules/**",
      "**/vendor/**",
      "**/.git/**",
      "**/.hg/**",
      "**/.svn/**",
      "**/dist/**",
      "**/build/**",
      "**/coverage/**"
    ],
  },
  "agent": {
    "tool_permissions": {
      "default": "allow"
    },
    "use_modifier_to_send": true,
    "favorite_models": [
      {
        "provider": "zed.dev",
        "model": "claude-sonnet-4-5"
      },
      {
        "provider": "zed.dev",
        "model": "claude-sonnet-4-thinking"
      }
    ],
    "show_turn_stats": true,
    "play_sound_when_agent_done": true,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5",
    },
    "default_profile": "write",
  },
  "slash_commands": {
    "cargo_workspace": {
      "enabled": true,
    },
  },
  // ─── PRIVACY & SECURITY ────────────────────────────────────────
  "redact_private_values": false,
  "private_files": [
    "**/.env*",
    "**/*.pem",
    "**/*.key",
    "**/*.cert",
    "**/*.crt",
    "**/secrets.yml",
    "**/secrets.json",
  ],
  // ─── SESSION & WINDOW ──────────────────────────────────────────
  "restore_on_startup": "last_session",
  "when_closing_with_no_tabs": "close_window",
  "bottom_dock_layout": "left_aligned",
  "centered_layout": {
    "right_padding": 0,
  },
  "message_editor": {
    "auto_replace_emoji_shortcode": true,
  },
  // ─── EXTENSIONS ────────────────────────────────────────────────
  "auto_install_extensions": {
    "nix": true,
    "golang": true,
    "python": true,
    "LOG": true,
    "GraphQL": true,
    "NGINX": true,
    "SCSS": true,
    "XML": true,
  },
  // ─── FORMATTING & LINTING ──────────────────────────────────────
  // Like VS Code's "editor.formatOnSave" + ESLint extension
  "load_direnv": "direct",
  "format_on_save": "on",
  "prettier": {
    "allowed": false,
  },
  "languages": {
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "eslint"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "eslint"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "eslint"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
    "Vue.js": {
      "formatter": {
        "language_server": {
          "name": "eslint"
        }
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
      },
    },
    "JSON": {
      "tab_size": 2,
    },
    "YAML": {
      "tab_size": 2,
    },
    "Markdown": {
      "soft_wrap": "editor_width",
      "show_wrap_guides": false,
    },
  },
  // ─── LSP (Language Server Protocol) ────────────────────────────
  // Fine-tune language servers to avoid formatter conflicts
  "lsp": {
    "eslint": {
      "settings": {
        "workingDirectory": {
          "mode": "location"
        }
      }
    },
    // Disable vtsls built-in formatting (ESLint handles it)
    "vtsls": {
      "settings": {
        "typescript": {
          "format": {
            "enable": false
          }
        },
        "javascript": {
          "format": {
            "enable": false
          }
        }
      }
    },
    // Disable Vue Language Server formatting (ESLint handles it)
    "vue-language-server": {
      "settings": {
        "vue": {
          "format": {
            "enable": false
          }
        }
      }
    }
  },
}
