[user]
	email = pedro.correa@estrategia.com
	name = Pedro Correa

[core]
	editor = nvim
	pager = less -F -X
	excludesfile = ~/.config/git/gitignore_global
	autocrlf = input

[push]
	default = simple
	autoSetupRemote = true

[pull]
	ff = only

[fetch]
	prune = true

[alias]
	# Basic status and staging
	s        = status -s
	st       = status
	a        = add .
	aa       = add -A
	ap       = add -p

	# Committing
	ci       = commit -m
	ca       = commit -am
	amend    = commit --amend --no-edit

	# Branching and Checking out
	co       = checkout
	cb       = checkout -b
	br       = branch
	brd      = branch -d

	# History and Logging
	# The "log" alias is a classic. It provides a much more useful graph view.
	log      = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
	last     = log -1 HEAD
	hist     = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

	# Reverting and Resetting
	undo     = reset --soft HEAD~1
	unstage  = reset HEAD --

	# Cleaning and Resetting
	clean-branch = "!f() { \
		git branch -D $1 && \
		git fetch origin $1 && \
		git checkout $1; \
	}; f"

	pop-diff = "!f() { \
	  files=$(git diff --name-only --diff-filter=AM \"$1..$2\"); \
	  if [ -z \"$files\" ]; then \
	    echo \"No new or modified files found.\"; \
	  else \
	    echo \"Checking out:\"; \
	    echo \"$files\"; \
	    git checkout \"$2\" -- $files; \
	  fi; \
	}; f"

[color]
	ui = auto

[diff]
	colorMoved = default

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[url "git@github.com:"]
	insteadOf = https://github.com/

[credential]
	helper = manager

[merge]
	ff = true
	tool = meld

[diff]
    tool = meld
		
[difftool]
    prompt = false

[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
