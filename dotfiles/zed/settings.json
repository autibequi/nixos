{
  // === Theme Settings ===
  // NOTE: Zed does not support separate overrides for light/dark modes.
  // Because of this, I can't use light mode with custom overrides.
  "theme": {
    "mode": "system",
    "light": "Tokyo Night",
    "dark": "Tokyo Night"
  },
  "collaboration_panel": {
    "button": false
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.2
  },
  "debugger": {
    "dock": "left",
    "button": true
  },
  "git": {
    "hunk_style": "unstaged_hollow"
  },
  "unstable.ui_density": "compact",
  "use_smartcase_search": true,
  "prettier": {
    "allowed": true,
  },
  "search": {
    "case_sensitive": false,
    "include_ignored": true
  },
  "show_edit_predictions": false,
  "ui_font_features": {
    "ligatures": true,
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_onboarding_banner": true,
    "show_user_picture": true
  },
  "load_direnv": "direct",
  "debuggers": [],
  "git_panel": {
    "button": true,
    "default_width": 500,
    "sort_by_path": true,
    "status_style": "label_color",
    "fallback_branch_name": "opsie"
  },
  "bottom_dock_layout": "full",
  "outline_panel": {
    "dock": "right"
  },
  "agent_font_size": 23,
  "project_panel": {
    "auto_fold_dirs": true,
    "show_diagnostics": "all",
    "hide_gitignore": true,
    "indent_size": 30,
    "entry_spacing": "standard"
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#1a1b26aa",
    "panel.background": "#41486844",
    // "editor.background": "#1a1b264f",
  },
  "icon_theme": "Catppuccin Mocha",
  // === Font & UI ===
  "ui_font_size": 21,
  "buffer_font_size": 18,
  "editor": {
    "cursor_style": "block",
    "cursor_blinking": "smooth",
    "font_ligatures": true,
    "render_whitespace": "boundary",
    "rulers": [
      80,
      100,
      120
    ],
    "format_on_save": "on",
    "show_copilot_suggestions": true,
    "show_inlay_hints": true,
    "preferred_line_length": 100,
    "tab_size": 2,
    "soft_tabs": true,
    "hard_tabs": false,
    "detect_indentation": true,
    "ensure_final_newline_on_save": true
  },
  // === Terminal ===
  "terminal": {
    "shell": "system",
    "font_family": "Fira Code",
    "font_size": 14,
    "dock": "bottom",
    "option_as_meta": true,
    "copy_on_select": true
  },
  // === Keybindings ===
  "keybindings": [],
  // === File Handling ===
  "files": {
    "trim_trailing_whitespace": true,
    "auto_save": "onWindowChange",
    "associations": {
      "*.vue": "vue"
    }
  },
  // === Formatting ===
  "format_on_save": "on",
  "formatter": "language_server",
  // === Language Settings ===
  "languages": {
    "Go": {
      "format_on_save": "on",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "enable_language_server": true,
      "inlay_hints": {
        "enabled": true,
        "show_parameter_names": true,
        "show_type_hints": true
      }
    },
    "JavaScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2,
      "soft_tabs": true,
      "preferred_line_length": 100,
      "enable_language_server": true,
      "inlay_hints": {
        "enabled": true,
        "show_parameter_names": true,
        "show_type_hints": true
      }
    },
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2,
      "soft_tabs": true,
      "preferred_line_length": 100,
      "enable_language_server": true,
      "inlay_hints": {
        "enabled": true,
        "show_parameter_names": true,
        "show_type_hints": true
      }
    },
    "Vue": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2,
      "soft_tabs": true,
      "preferred_line_length": 100,
      "enable_language_server": true
    },
    "json": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "markdown": {
      "format_on_save": "off"
    },
    "Nix": {
      "format_on_save": "on",
      "language_servers": [
        "nixd",
        "!nil"
      ],
      "formatter": {
        "external": {
          "command": "nixfmt",
          "arguments": [
            "--quiet",
            "--"
          ]
        }
      }
    }
  },
  // === LSP Configuration ===
  "lsp": {
    "gopls": {
      "path": "gopls"
    },
    "typescript-language-server": {
      "path": "typescript-language-server",
      "arguments": [
        "--stdio"
      ]
    },
    "vue-language-server": {
      "path": "vue-language-server",
      "arguments": [
        "--stdio"
      ]
    },
    "eslint": {
      "path": "eslint_d",
      "arguments": [
        "--stdin",
        "--stdin-filename"
      ]
    },
    "prettier": {
      "path": "prettier",
      "arguments": [
        "--stdin-filepath"
      ]
    }
  },
  // === Copilot & Agent ===
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  }
}
