{
  // =======================
  //      EDITOR SETTINGS
  // =======================
  "editor": {
    "cursor_blinking": "smooth",
    "cursor_style": "block",
    "font_ligatures": true,
    "format_on_save": "on",
    "hard_tabs": true,
    "preferred_line_length": 100,
    "render_whitespace": "boundary",
    "show_copilot_suggestions": true,
    "show_inlay_hints": true,
    "soft_tabs": true,
    "tab_size": 2
  },
  "soft_wrap": "editor_width",
  "format_on_save": "on",
  "formatter": "language_server",
  // =======================
  //      FONT SETTINGS
  // =======================
  "buffer_font_size": 18,
  "buffer_font_weight": 500,
  "buffer_font_family": "Fira Code",
  "agent_font_size": 15,
  "ui_font_family": "Fira Code",
  "ui_font_weight": 600,
  "ui_font_size": 17,
  // =======================
  //      UI SETTINGS
  // =======================
  "unstable.ui_density": "comfortable",
  "icon_theme": "VSCode Icons (Dark)",
  "theme": {
    "dark": "Tokyo Night",
    "light": "Gruvbox Light Hard",
    "mode": "system"
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.2
  },
  "bottom_dock_layout": "left_aligned",
  "collaboration_panel": {
    "button": false
  },
  "when_closing_with_no_tabs": "close_window",
  "preview_tabs": {
    "enable_preview_from_code_navigation": true,
    "enable_preview_from_file_finder": true,
    "enabled": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "minimap": {
    "current_line_highlight": "all",
    "show": "always",
    "thumb": "always",
    "thumb_border": "full"
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "scroll_sensitivity": 2,
  // =======================
  //      FILE SETTINGS
  // =======================
  "files": {
    "associations": {
      "*.vue": "vue"
    },
    "auto_save": "onWindowChange"
  },
  "auto_install_extensions": {
    "nix": true,
    "golang": true,
    "python": true,
    "LOG": true,
    "GraphQL": true,
    "NGINX": true,
    "SCSS": true,
    "XML": true
  },
  // =======================
  //      LANGUAGE SETTINGS
  // =======================
  "languages": {
    "Nix": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "arguments": [
            "--quiet",
            "--"
          ],
          "command": "nixfmt"
        }
      },
      "language_servers": [
        "nixd",
        "!nil"
      ]
    }
  },
  // =======================
  //        AI SETTINGS
  // =======================
  "edit_predictions": {
    "mode": "eager"
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_profile": "write",
    "profiles": {
      "nixos": {
        "name": "NixOs Specialist",
        "tools": {
          "ls": true,
          "pwd": true,
          "cat": true,
          "echo": true,
          "rm": true,
          "mkdir": true,
          "touch": true,
          "cp": true,
          "mv": true,
          "nh": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "nixos": {
            "tools": {
              "nixd": true,
              "nh": true
            }
          }
        }
      }
    },
    "always_allow_tool_actions": true,
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "show_edit_predictions": true,
  // =======================
  //      PANEL SETTINGS
  // =======================
  "outline_panel": {
    "auto_reveal_entries": true,
    "dock": "right",
    "auto_fold_dirs": true
  },
  "project_panel": {
    "hide_gitignore": false,
    "indent_size": 30,
    "show_diagnostics": "all"
  },
  // =======================
  //      DIAGNOSTICS
  // =======================
  "diagnostics": {
    "inline": {
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": "info"
    }
  },
  // =======================
  //      GIT SETTINGS
  // =======================
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "git_panel": {
    "sort_by_path": true,
    "status_style": "icon"
  },
  // =======================
  //      TERMINAL SETTINGS
  // =======================
  "terminal": {
    "copy_on_select": true,
    "font_family": "Cantarell",
    "font_size": 19,
    "font_weight": 500
  },
  // =======================
  //      SEARCH SETTINGS
  // =======================
  "search": {
    "include_ignored": true
  },
  // =======================
  //      DEBUGGER SETTINGS
  // =======================
  "debugger": {
    "dock": "left",
    "format_dap_log_messages": true,
    "log_dap_communications": true,
    "save_breakpoints": true
  },
  // =======================
  //      MISC SETTINGS
  // =======================
  "load_direnv": "direct",
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "proseWrap": "preserve",
    "endOfLine": "lf"
  },
  "inlay_hints": {
    "typeHints": true,
    "parameterHints": true,
    "chainingHints": true
  }
}
