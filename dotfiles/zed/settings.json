{
  // === Theme Settings ===
  // NOTE: Zed does not support separate overrides for light/dark modes.
  // Because of this, I can't use light mode with custom overrides.
  "theme": {
    "mode": "system",
    "light": "Tokyo Night",
    "dark": "Tokyo Night"
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#1a1b26aa",
    "title_bar.background": "#1a1b26df",
    "toolbar.background": "#41486844",
    "tab_bar.background": "#41486833",
    "tab.inactive_background": "#41486800",
    "tab.active_background": "#7aa2f711",
    "panel.background": "#41486844",
    "editor.background": "#1a1b264f",
    "status_bar.background": "#7dcfffcc"
  },
  "icon_theme": "Catppuccin Mocha",
  // === Font & UI ===
  "ui_font_size": 21,
  "buffer_font_size": 18,
  "editor": {
    "cursor_style": "block",
    "cursor_blinking": "smooth",
    "font_ligatures": true,
    "render_whitespace": "boundary",
    "rulers": [
      80,
      100,
      120
    ],
    "format_on_save": "on",
    "show_copilot_suggestions": true,
    "show_inlay_hints": true,
    "preferred_line_length": 100,
    "tab_size": 2,
    "soft_tabs": true,
    "hard_tabs": false,
    "detect_indentation": true,
    "ensure_final_newline_on_save": true
  },
  "ui": {
    "activity_bar_position": "left",
    "smooth_scrolling": true,
    "linked_editing": true,
    "project_panel": {
      "dock_position": "left",
      "default_width": 280
    },
    "modal": true
  },
  // === Terminal ===
  "terminal": {
    "shell": "system",
    "font_family": "Fira Code",
    "font_size": 14,
    "option_as_meta": true,
    "copy_on_select": true
  },
  // === Keybindings ===
  "keybindings": [],
  // === File Handling ===
  "files": {
    "trim_trailing_whitespace": true,
    "auto_save": "onWindowChange",
    "associations": {
      "*.vue": "vue"
    }
  },
  // === Formatting ===
  "format_on_save": "on",
  "formatter": "language_server",
  // === Language Settings ===
  "languages": {
    "Go": {
      "format_on_save": "on",
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "enable_language_server": true,
      "inlay_hints": {
        "enabled": true,
        "show_parameter_names": true,
        "show_type_hints": true
      }
    },
    "JavaScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2,
      "soft_tabs": true,
      "preferred_line_length": 100,
      "enable_language_server": true,
      "inlay_hints": {
        "enabled": true,
        "show_parameter_names": true,
        "show_type_hints": true
      }
    },
    "TypeScript": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2,
      "soft_tabs": true,
      "preferred_line_length": 100,
      "enable_language_server": true,
      "inlay_hints": {
        "enabled": true,
        "show_parameter_names": true,
        "show_type_hints": true
      }
    },
    "Vue": {
      "format_on_save": "on",
      "formatter": "language_server",
      "tab_size": 2,
      "soft_tabs": true,
      "preferred_line_length": 100,
      "enable_language_server": true
    },
    "json": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "markdown": {
      "format_on_save": "off"
    },
    "Nix": {
      "format_on_save": "on",
      "language_servers": [
        "nixd",
        "!nil"
      ],
      "formatter": {
        "external": {
          "command": "nixfmt",
          "arguments": [
            "--quiet",
            "--"
          ]
        }
      }
    }
  },
  // === LSP Configuration ===
  "lsp": {
    "gopls": {
      "path": "gopls"
    },
    "typescript-language-server": {
      "path": "typescript-language-server",
      "arguments": [
        "--stdio"
      ]
    },
    "vue-language-server": {
      "path": "vue-language-server",
      "arguments": [
        "--stdio"
      ]
    },
    "eslint": {
      "path": "eslint_d",
      "arguments": [
        "--stdin",
        "--stdin-filename"
      ]
    },
    "prettier": {
      "path": "prettier",
      "arguments": [
        "--stdin-filepath"
      ]
    }
  },
  // === Copilot & Agent ===
  "agent": {
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  }
}
