{
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "model": "gpt-4.1",
      "provider": "copilot_chat"
    },
    "inline_assistant_model": {
      "model": "gpt-4.1",
      "provider": "copilot_chat"
    },
    "version": "2"
  },
  "auto_install_extensions": {
    "nix": true,
    "golang": true,
    "python": true
  },
  "agent_font_size": 23,
  "active_pane_modifiers": {
    "inactive_opacity": 0.2
  },
  "bottom_dock_layout": "left_aligned",
  "buffer_font_size": 18,
  "collaboration_panel": {
    "button": false
  },
  "debugger": {
    "button": true,
    "dock": "left"
  },
  "debuggers": [],
  "experimental.theme_overrides": {
    "background": "#1a1b26aa",
    "background.appearance": "blurred",
    "panel.background": "#41486844"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "files": {
    "associations": {
      "*.vue": "vue"
    },
    "auto_save": "onWindowChange",
    "trim_trailing_whitespace": true
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "git": {
    "hunk_style": "unstaged_hollow"
  },
  "git_panel": {
    "button": true,
    "default_width": 500,
    "fallback_branch_name": "opsie",
    "sort_by_path": true,
    "status_style": "label_color"
  },
  "icon_theme": "Catppuccin Mocha",
  "keybindings": [],
  "languages": {
    "Go": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "enable_language_server": true,
      "format_on_save": "on",
      "formatter": "language_server",
      "inlay_hints": {
        "enabled": true,
        "show_parameter_names": true,
        "show_type_hints": true
      }
    },
    "JavaScript": {
      "enable_language_server": true,
      "format_on_save": "on",
      "formatter": "language_server",
      "inlay_hints": {
        "enabled": true,
        "show_parameter_names": true,
        "show_type_hints": true
      },
      "preferred_line_length": 100,
      "soft_tabs": true,
      "tab_size": 2
    },
    "TypeScript": {
      "enable_language_server": true,
      "format_on_save": "on",
      "formatter": "language_server",
      "inlay_hints": {
        "enabled": true,
        "show_parameter_names": true,
        "show_type_hints": true
      },
      "preferred_line_length": 100,
      "soft_tabs": true,
      "tab_size": 2
    },
    "Vue": {
      "enable_language_server": true,
      "format_on_save": "on",
      "formatter": "language_server",
      "preferred_line_length": 100,
      "soft_tabs": true,
      "tab_size": 2
    },
    "json": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "markdown": {
      "format_on_save": "off"
    },
    "Nix": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "arguments": [
            "--quiet",
            "--"
          ],
          "command": "nixfmt"
        }
      },
      "language_servers": [
        "nixd",
        "!nil"
      ]
    }
  },
  "lsp": {
    "eslint": {
      "arguments": [
        "--stdin",
        "--stdin-filename"
      ],
      "path": "eslint_d"
    },
    "gopls": {
      "path": "gopls"
    },
    "prettier": {
      "arguments": [
        "--stdin-filepath"
      ],
      "path": "prettier"
    },
    "typescript-language-server": {
      "arguments": [
        "--stdio"
      ],
      "path": "typescript-language-server"
    },
    "vue-language-server": {
      "arguments": [
        "--stdio"
      ],
      "path": "vue-language-server"
    }
  },
  "load_direnv": "direct",
  "outline_panel": {
    "auto_reveal_entries": true,
    "dock": "right",
    "auto_fold_dirs": true
  },
  "prettier": {
    "allowed": true
  },
  "project_panel": {
    "auto_fold_dirs": true,
    "entry_spacing": "standard",
    "hide_gitignore": false,
    "indent_size": 30,
    "show_diagnostics": "all"
  },
  "scroll_sensitivity": 0.5,
  "search": {
    "case_sensitive": false,
    "include_ignored": true
  },
  "show_edit_predictions": false,
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "terminal": {
    "copy_on_select": true,
    "dock": "bottom",
    "font_family": "Fira Code",
    "font_size": 19,
    "option_as_meta": true,
    "shell": "system"
  },
  "theme": {
    "dark": "Tokyo Night",
    "light": "Tokyo Night",
    "mode": "system"
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_onboarding_banner": true,
    "show_user_picture": true
  },
  "ui_font_features": {
    "ligatures": true
  },
  "ui_font_size": 17,
  "unstable.ui_density": "compact",
  "use_smartcase_search": true,
  "editor": {
    "cursor_blinking": "smooth",
    "cursor_style": "block",
    "detect_indentation": true,
    "ensure_final_newline_on_save": true,
    "font_ligatures": true,
    "format_on_save": "on",
    "hard_tabs": false,
    "preferred_line_length": 100,
    "render_whitespace": "boundary",
    "rulers": [
      80,
      100,
      120
    ],
    "show_copilot_suggestions": true,
    "show_inlay_hints": true,
    "soft_tabs": true,
    "tab_size": 2
  }
}
