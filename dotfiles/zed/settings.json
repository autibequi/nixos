{
  // =======================
  //      EDITOR SETTINGS
  // =======================
  "centered_layout": {
    "left_padding": 10,
    "right_padding": 0
  },
  "show_call_status_icon": true,
  "show_signature_help_after_edits": true,
  "editor": {
    "cursor_blinking": "smooth",
    "cursor_style": "block",
    "font_ligatures": true,
    "hard_tabs": true,
    "preferred_line_length": 100,
    "render_whitespace": "boundary",
    "show_copilot_suggestions": true,
    "show_inlay_hints": true,
    "soft_tabs": true,
    "tab_size": 2
  },
  "vim_mode": false,
  "vim": {
    "cursor_shape": {
      "insert": "bar",
      "normal": "block",
      "replace": "hollow",
      "visual": "underline"
    }
  },
  "auto_indent_on_paste": true,
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "autoscroll_on_clicks": true,
  "fast_scroll_sensitivity": 5,
  "scroll_sensitivity": 2,
  "redact_private_values": false,
  "private_files": [
    // List of private files to exclude from search, version control, etc.
    ".env",
    ".env.local",
    ".env.*.local",
    "secrets.json",
    "private.key"
  ],
  "soft_wrap": "editor_width",
  // =========================
  //     TOOLBAR SETTINGS
  // =========================
  "toolbar": {
    "agent_review": false,
    "breadcrumbs": true,
    "code_actions": false,
    "code_navigation": false,
    "edit_predictions": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "show_wrap_guides": true,
  "scrollbar": {
    "show": "never"
  },
  "slash_commands": {
    "cargo_workspace": {
      "enabled": true
    },
    "docs": {
      "enabled": true
    }
  },
  "title_bar": {
    "show_branch_icon": true,
  },
  // =======================
  //      FONT SETTINGS
  // =======================
  "buffer_font_size": 18,
  "buffer_font_weight": 600,
  "buffer_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "ui_font_family": "JetBrainsMonoNL Nerd Font Mono",
  "ui_font_weight": 600,
  "ui_font_size": 18,
  "agent_font_size": 18,
  // =======================
  //      UI SETTINGS
  // =======================
  "unstable.ui_density": "comfortable",
  "icon_theme": "VSCode Icons (Dark)",
  "theme": {
    "dark": "Tokyo Night",
    "light": "Hex Solarized Light Theme",
    "mode": "system"
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.2
  },
  "bottom_dock_layout": "left_aligned",
  "when_closing_with_no_tabs": "close_window",
  "preview_tabs": {
    "enable_preview_from_code_navigation": true,
    "enable_preview_from_file_finder": true,
    "enabled": true,
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "use_smartcase_search": true,
  "minimap": {
    "current_line_highlight": "all",
    "show": "always",
    "thumb": "always",
    "thumb_border": "none",
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "enabled": true,
    "active_line_width": 4,
    "line_width": 2,
  },
  // =======================
  //      FILE SETTINGS
  // =======================
  "files": {
    "associations": {
      "*.vue": "vue"
    },
    "auto_save": "onWindowChange"
  },
  "auto_install_extensions": {
    "nix": true,
    "golang": true,
    "python": true,
    "LOG": true,
    "GraphQL": true,
    "NGINX": true,
    "SCSS": true,
    "XML": true
  },
  // =======================
  //      LANGUAGE SETTINGS
  // =======================
  "languages": {
    "JsonC": {
      "format_on_save": "on",
    },
    "Nix": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "arguments": [
            "--quiet",
            "--"
          ],
          "command": "nixfmt"
        }
      },
      "language_servers": [
        "nixd",
        "!nil"
      ]
    },
  },
  // =======================
  //        AI SETTINGS
  // =======================
  "edit_predictions": {
    "disabled_globs": [
      "**/node_modules/**",
      "**/vendor/**",
      "**/.git/**",
      "**/.hg/**",
      "**/.svn/**",
      "**/dist/**",
      "**/build/**"
    ],
    "mode": "eager"
  },
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_profile": "write",
    "profiles": {
      "nixos": {
        "name": "NixOs Specialist",
        "tools": {
          "ls": true,
          "pwd": true,
          "cat": true,
          "echo": true,
          "rm": true,
          "mkdir": true,
          "touch": true,
          "cp": true,
          "mv": true,
          "nh": true
        },
        "enable_all_context_servers": true,
        "context_servers": {
          "nixos": {
            "tools": {
              "nixd": true,
              "nh": true
            }
          }
        }
      }
    },
    "always_allow_tool_actions": true,
    "version": "2"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "show_edit_predictions": true,
  // =======================
  //      PANEL SETTINGS
  // =======================
  "outline_panel": {
    "auto_reveal_entries": true,
    "dock": "right",
    "auto_fold_dirs": true
  },
  "project_panel": {
    "hide_gitignore": true,
    "indent_size": 30,
    "show_diagnostics": "all",
  },
  "git_panel": {
    "sort_by_path": true,
    "status_style": "icon"
  },
  "collaboration_panel": {
    "button": true,
    "dock": "left"
  },
  // =======================
  //      DIAGNOSTICS
  // =======================
  "diagnostics": {
    "inline": {
      "update_debounce_ms": 50,
      "enabled": true,
      "padding": 4,
      "min_column": 0,
      "max_severity": "hint",
    },
    "cargo": {
      "fetch_cargo_diagnostics": true,
    },
    "include_warnings": true,
    "button": true,
  },
  "format_on_save": "on",
  "formatter": "language_server",
  "line_indicator_format": "long",
  // =======================
  //      GIT SETTINGS
  // =======================
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500,
      "show_commit_summary": true
    },
    "hunk_style": "unstaged_hollow"
  },
  "message_editor": {
    "auto_replace_emoji_shortcode": true
  },
  // =======================
  //      TERMINAL SETTINGS
  // =======================
  "terminal": {
    "copy_on_select": true,
    "font_family": "JetBrainsMonoNL Nerd Font Mono",
    "font_size": 19,
    "font_weight": 500
  },
  // =======================
  //      SEARCH SETTINGS
  // =======================
  "search": {
    "include_ignored": true
  },
  // =======================
  //      DEBUGGER SETTINGS
  // =======================
  "debugger": {
    "dock": "left",
    "format_dap_log_messages": true,
    "log_dap_communications": true,
    "save_breakpoints": true
  },
  // =======================
  //      MISC SETTINGS
  // =======================
  "load_direnv": "direct",
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": true,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "true",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "proseWrap": "preserve",
    "endOfLine": "lf"
  },
  "inlay_hints": {
    "typeHints": true,
    "parameterHints": true,
    "chainingHints": true
  }
}
