{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "NixOS Rebuild Switch",
            "type": "f5anything",
            "request": "launch",
            "command": "nh os switch /etc/nixos"
        },
        {
            "name": "NixOS Clean All (keep 3, no GC)",
            "type": "f5anything",
            "request": "launch",
            "command": "nh clean all --keep 3 --nogc"
        },
        {
            "name": "Check Installed Packages",
            "type": "f5anything",
            "request": "launch",
            "command": "nix-store --verify --check-contents && nix-store --repair"
        }
    ]
}