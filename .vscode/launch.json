{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "NixOS Rebuild Switch",
            "type": "f5anything",
            "request": "launch",
            "command": "nh os switch ."
        },
        {
            "name": "NixOS Clean All (keep 3, no GC)",
            "type": "f5anything",
            "request": "launch",
            "command": "nh clean all --keep 3 --nogc"
        },
        {
            "name": "Repair Packages",
            "type": "f5anything",
            "request": "launch",
            "command": "nix-store --verify --check-contents"
        },
        {
            "name": "Nix Collect Garbage (Delete Old)",
            "type": "f5anything",
            "request": "launch",
            "command": "nix-collect-garbage --delete-old"
        },
        {
            "name": "Test Fastfetch Config",
            "type": "f5anything",
            "request": "launch",
            "command": "fastfetch --config ./dotfiles/fastfetch_small.jsonc"
        },
        {
        "name": "NixOS Rebuild Switch (Update)",
        "type": "f5anything",
        "request": "launch",
        "command": "nh os switch --update ."
        }
    ]
}